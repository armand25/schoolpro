{#Macro qui traite lees information des zones des principales page#}                         
{% macro traiteZoneSiteInternetSimple(tabTraiteZone,idEtablissement,inc,type)  %}
  {% if tabTraiteZone[inc] is defined %}
    {% for unInfo in tabTraiteZone[inc]['information'] %}
        {% if tabTraiteZone[inc]['typeInfo'] == 2 %}
           <ul>
          {% for unInfoArticle in tabTraiteZone[inc]['article'] %}
              {% if unInfoArticle.titre is defined %}
                      <li> 
                        {% if type == 1%}
                          <div class="calender_date bg-vert" style="float:left;">
                                <div class="calender_date_hd radius5500"> {{unInfoArticle.datePublication|date('Y')}} </div>
                                <div class="calender_date_dc"> 
                                        <span class="txt-1">{{unInfoArticle.datePublication|date('M')}}</span>
                                        <span class="txt-2">{{unInfoArticle.datePublication|date('d')}} TH</span>
                                </div>
                          </div>
                        {% elseif type == 2 %}
                          
                        {% endif %}
                        <a href="{{path('app_admin_details_article', { 'id' : unInfoArticle.id,'idEtablissement' : idEtablissement})}}">  
                        <i class="fa fa-anchor">  </i>
                             {% if unInfoArticle.titre is defined %}
                               {{unInfoArticle.titre}}
                            {% else %}
                               unInfoArticle.contenu
                            {% endif %}
                         </a>
                     </li>
                {% else %}

                {% endif %}
           {% endfor %}
            </ul>
       {% elseif tabTraiteZone[inc]['typeInfo'] == 1 %}
            {% for unInfo in tabTraiteZone[inc]['information'] %}                                                   
                  {{unInfo.contenuArticle|raw}}
            {% endfor %}                    
      {% endif %}
   {% endfor %}
 {% endif %}
{% endmacro %}
                
