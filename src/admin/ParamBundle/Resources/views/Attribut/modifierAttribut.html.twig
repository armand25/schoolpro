{% extends "::layout.html.twig" %}

{% block title %}{{parent()}} - Modification attribut{% endblock %}

{% block stylesheets %}
    {{parent()}} {#<link rel="stylesheet" type="text/css" href="{{ asset('css/page/login.css') }}" />#}
{% endblock %}
{% block body %}
    <section class="wrapper ">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-pencil"></i> MODIFICATION ATTRIBUT </h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="{{sessionData.homeUrl}}">Home</a></li>
                    <li><i class="fa fa-list"></i><a href="{{path('app_admin_attributs_user')}}">Attributs utilisateur</a></li>
                    <li><i class="fa fa-user"></i>Modification attribut</li>						  	
                </ol>
            </div>
        </div>



        <div class="row">

            <div class="col-lg-12">
                {% for contenu in app.session.getflashbag.get('attribut.modifier.success')%}
                    {% if loop.index == 0%}
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                            {% endif%}
                            <div class="text-center alert alert-success fade in">{{contenu}}</div>
                            {% if loop.index == 0%} 
                            </div>
                        </div>
                    {% endif%}
                {% endfor%}

                {% for contenu in app.session.getflashbag.get('attribut.modifier.error')%}
                    {% if loop.index == 0%}
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                            {% endif%}
                            <div class="text-center alert alert-danger fade in">{{contenu}}</div>
                            {% if loop.index == 0%} 
                            </div>
                        </div>
                    {% endif%}
                {% endfor%}

                {% for contenu in app.session.getflashbag.get('attribut.modifier.already.exist')%}
                    {% if loop.index == 0%}
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            {% endif%}
                            <div class="text-center alert alert-danger fade in">{{contenu}}</div>
                            {% if loop.index == 0%} 
                            </div>
                        </div>
                    {% endif%}
                {% endfor%}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <section class="panel">
                    <div class="panel-body">
                        <form class="form-horizontal" role="form" action="{{path('app_admin_attribut_modifier', {'idAttribut' : idAttribut})}}"  method="POST"  {{form_enctype(formuView)}}>

                            <div class="form-group">
                                {{form_rest(formuView) }} 
                                <div class="col-lg-2 ">
                                    <a  class="btn btn btn-default" href="{{path('app_admin_attributs_user')}}"> 
                                        <i class="icon icon-white icon-arrow-left"></i> Annuler
                                    </a>
                                </div>
                                <div class="col-lg-offset-2 col-lg-2">
                                    <button type="submit" class="btn btn-success" id="submit" > 
                                        <i class="icon icon-white icon-ok"></i> Ajouter 
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>

        </div>    
    </section>

{% endblock %}
{% block javascriptsPerso %}

{% endblock %}