{% extends "layout.html.twig" %}

{% block title %}{{parent()}} - Modifier classe{% endblock %}
{% block file_arriane %}
     <div class="fond-fil-ariane-classe" >
                    <div class="zone-fil-ariane" style="background:rgba(0,0,0,0.4); width: 100%; height : 0px;padding-top: 0px;color: #fff;">
                        <div class="row" style="background:rgba(0,0,0,0.3)">
                            <div class="col-xs-7" >
                               <h1> Modifier une classe</h1>
                            </div>
                            <div class="col-xs-5" style="margin-top: 15px; ">
                               <span class="fil-1"> Accueil</span> > <span class="fil-2">Gestion des classes</span> ><span class="fil-3"> Modifier </span>
                            </div>
                        </div>
                    </div>
		</div>           
{% endblock  %}
{% block stylesheets %}
    {{parent()}} {#<link rel="stylesheet" type="text/css" href="{{ asset('css/page/login.css') }}" />#}
{% endblock %}
{% block body %}

    {% for contenu in app.session.getflashbag.get('eleve.modifier.success')%}
        {% if loop.index == 0%}

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  ">
                {% endif%}
        <div class="text-center alert alert-success  fade in">{{contenu}}</div>
                {% if loop.index == 0%} 
    </div>

        {% endif%}
    {% endfor%}

    {% for contenu in app.session.getflashbag.get('eleve.modifier.error')%}
        {% if loop.index == 0%}

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  ">
                {% endif%}
        <div class="text-center alert alert-danger  fade in">{{contenu}}</div>
                {% if loop.index == 0%} 
    </div>

        {% endif%}
    {% endfor%}

    {% for contenu in app.session.getflashbag.get('eleve.modifier.already.exist')%}
        {% if loop.index == 0%}

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                {% endif%}
        <div class="text-center alert alert-danger fade in">{{contenu}}</div>
                {% if loop.index == 0%} 
    </div>

        {% endif%}
    {% endfor%}
<div class="panel panel-white">
    <div class="panel-body">
        <div class="col-lg-12" >
         <table class="table table-striped table-hover ">
                    <thead >
                        <tr class=" ">
                            <th>Libell√©</th>
                            <th>Montant {% set montantTotal = 0%}</th> 
                        </tr>
                    </thead>
                    <tbody>
                        {% for uneClasse in listeClasse %}
                            <tr>                           
                                <td style="font-size: 18px"> {{uneClasse.libelleClasse}} </td>
                                <td style="text-align: right;font-size: 20px">{% if soldeClasse[uneClasse.id] is defined %}{% set montantTotal = montantTotal+soldeClasse[uneClasse.id][0].solde %}{{soldeClasse[uneClasse.id][0].solde|number_format(0, '.', ' ') }}{% endif %}</td>
                            </tr>
                        {% endfor %}                       
                    </tbody>
                    <tfoot>
                         <tr class=" ">
                            <th></th>
                            <th style="text-align: right;font-size: 24px">{{montantTotal|number_format(0, '.', ' ')}}</th> 
                        </tr>                    
                    </tfoot>
                </table>

        </div>
    </div>
</div>
{% endblock %}
{% block scripts %}
{{parent()}}
{% endblock %}

