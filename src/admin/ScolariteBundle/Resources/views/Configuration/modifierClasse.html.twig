{% block javascriptsPerso %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.tel').numeric();
            $('.tel').keyup(function () {
                var saisie = $(this).val();
                if (saisie.length > 0) {
                    var number = parseInt(saisie);
                    if ((typeof number != 'undefined') && (!isNaN(number))) {
                        var newVal = (number == 0) ? '' : number;
                        $(this).val(newVal);
                    }
                }

            });
        });

    </script>
