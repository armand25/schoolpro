{% extends "::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Plan comptable
{% endblock %}	
{% block file_arriane %}
<div class="fond-fil-ariane" >
    <div class="zone-fil-ariane" style="background:rgba(0,0,0,0.4); width: 100%; height : 0px;padding-top: 0px;color: #fff;">
        <div class="row" style="background:rgba(0,0,0,0.3)">
            <div class="col-xs-7" >
                <h1> Ajouter une plan comptable.</h1>
            </div>
            <div class="col-xs-5" style="margin-top: 15px; ">
                <span class="fil-1"> Accueil</span> > <span class="fil-2">Gestion des plan comptable.</span> ><span class="fil-3"> Ajout </span>
            </div>
        </div>
    </div>
</div>           
{% endblock  %}
{% block body %}  

    {#  Menu #}



 {% for contenu in app.session.getflashbag.get('info')%}
        {% if loop.index == 0%}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  ">
                {% endif%}
    <div class="text-center alert alert-success  fade in">{{message}}</div>
                {% if loop.index == 0%} 
</div>

        {% endif%}
    {% endfor%}        
 {% for contenu in app.session.getflashbag.get('error')%}
        {% if loop.index == 0%}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  ">
                {% endif%}
    <div class="text-center alert alert-success  fade in">{{error}}</div>
                {% if loop.index == 0%} 
</div>

        {% endif%}
    {% endfor%}        

{#    <form class="form" method="POST" {{form_enctype(form)}}>#}

<div class="panel panel-white">              
    <div class="panel-body">
        <div class="col-lg-12" >
{{ form_start(form) }} 


            {%if(form_errors(form) is not empty)%}
            <h5 style="color: red;">
                    {{ form_errors(form.compte) }}
            </h5>
            {%endif%}
            <div class="groupedElements">
                <div class="newFormAbonne champsGrp">
                    {{ form_errors(form.compte) }}
                    {#			{{ form_label(form.compte) }}#}
                    <label><img src="{{ asset('img/client-img/formulaire/numero_compte.png')}}" alt="" title="" /></label>
                        {{ form_widget(form.compte) }}
                    <div class="clr"></div>
                </div>   
                <div class="newFormAbonne champsGrp lastElement">
                    {{ form_errors(form.libelle) }}
                    {#			{{ form_label(form.libelle) }}#}
                    <label><img src="{{ asset('img/client-img/formulaire/icon-user.png')}}" alt="" title="" /></label>
                        {{ form_widget(form.libelle) }}
                    <div class="clr"></div>
                </div>
                <div class="clr"></div>

            </div>
            <div class="groupedElements">

                <div class="newFormAbonne champsGrp">
                    {{ form_errors(form.type) }}
                    {#			{{ form_label(form.type) }}#}
                    <label><img src="{{ asset('img/client-img/formulaire/type.png')}}" alt="" title="" /></label>
                        {{ form_widget(form.type) }}	
                    <div class="clr"></div>
                </div>
                <div class="newFormAbonne champsGrp lastElement">
                    {{ form_errors(form.liea) }}
                    {#			{{ form_label(form.liea) }}#}
                    <label><img src="{{ asset('img/client-img/formulaire/liea.png')}}" alt="" title="" /></label>
                        {{ form_widget(form.liea) }}	
                    <div class="clr"></div>
                </div>
                <div class="clr"></div>

            </div>
            <div class="form-group clearfix pull-right col-lg-3 zone-bouton-panel">
                <a  class="btn" href="{{path('admin_planliste')}}"> <i class="icon icon-white icon-arrow-left"></i> Annuler</a>
                <button type="submit" class="btn btn-success" id="submit" > <i class="icon icon-white icon-ok"></i> Valider </button>
            </div>         

{#    </form>#}
 {{ form_end(form) }}
        </div>
    </div>
</div>
{%endblock%}