                                        <div class="col-lg-8 control"> {{ form_widget(formuView.codeCaisse) }}</div>
                                    </div>#}

                                    <div class="form-group clearfix margin-top-15px">
                                        <label class="col-lg-3 control-label">{{ form_label(formuView.nomCaisse) }} </label>
                                        <div class="col-lg-8 control"> {{ form_widget(formuView.nomCaisse) }}</div>
                                    </div>

                                                      

                                    {# <div class="form-group clearfix margin-top-15px">
                                                <label class="col-lg-3 control-label"> {{ form_label(formuView.rubrique) }}</label>
                                                <div class="col-lg-8 control">  {{ form_widget(formuView.rubrique) }}</div> 
                                            </div>  #}                

                                    <div class="form-group clearfix pull-right">
                                        <a  class="btn" href="{{path('admin_caisses')}}"> 
                                            <i class="icon icon-white icon-arrow-left"></i> Annuler
                                        </a>
                                        <button type="submit" class="btn btn-success" id="submit" > 
                                            <i class="icon icon-white icon-ok"></i> Modifier 
                                        </button>
                                    </div>
                                    <div class="col-lg-12" style="height: 10px"></div>
                                </form>
                            </div>
                        </div>
