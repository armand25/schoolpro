{% extends 'baseDefault.html.twig' %}
{% block body %}
{% set inc = 0 %}
   {% if rubrique is defined %}
   
 <div class="page-title" style="background-color:#57bae8;color:#FFF;padding-left:20px;">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        
                        <h2 style="color:#FFF;"><i class="icon-tasks page-title-icon"></i>{{rubrique.designationRubrique}}</h2>
                    </div>
                </div>
            </div>
        </div>         
        <!-- Liste des articles Ã  gauche -->
        <div class="container">
		<div class="row">
		<div class="col-lg-8 col-sm-8">

                <!-- Zone de description de rubrique et de contenu des articles -->
                <div id="page-wrapper" >
                    <div id="page-inner" class="container">
                        
                        <!-- Zone de description de rubrique -->
                        <div class="call-to-action call-to-action-text desc">
                            <div class="col-md-12 services-full-width-text span8">
                                <h3>Description de la rubrique</h3>
                                <p>{{rubrique.descriptionRubrique|raw}}</p>
                            </div>
                        </div>
                        <!-- /. ROW  -->
                        
                        <hr class="ligne"/>
                        
                        <!-- Contenu des articles -->
                        <div class="tab-content">
                        {% for unArticle in rubrique.getArticles %}
                                <div class="contenuarticle span8 " >
                                    <h4 id="">{{unArticle.titre}}</h4>
                                    <p class="infoarticle">{{unArticle.datePublication|date('d M Y')}} | {{unArticle.utilisateur.nom}}</p>
                                    <hr />
                                    <p>{{unArticle.contenuArticle|raw}}</p>
                                </div>
                            <!-- /. ROW  -->
                        {% endfor %}
                        </div>
                    </div>
                    <!-- /. PAGE INNER  -->
                </div>  
			</div> 
		</div>
			
        </div>
        {% endif %}
{% endblock %}
{% block javascripts %}
{{parent()}}
	
		<script type="text/javascript">
			$('.carousel[data-mixed] ul').anoSlide(
			{
				items: 5,
				speed: 500,
				prev: 'a.prev[data-prev]',
				next: 'a.next[data-next]',
				lazy: true,
				delay: 100
			})
		</script>
{% endblock %}


